<%- include('../includes/head.ejs') %>
</head>

<body>
    


    <%- include('../includes/navbar.ejs') %>

    <div class="container mt-3">
        <div class="row gy-3">
            <% for(prod of products){ %>
            <div class="col-12 col-md-6 col-lg-3">
                
                <div class="card text-center" style="cursor: pointer;" onclick="location.href='/productdetails/<%= prod.id%>';">
                    <img src="<%= prod.imageurl %>" style="object-fit:cover;width:100%;height:300px;" alt="<%= prod.title %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= prod.title %></h5>
                      <h5 class="card-title mb-3">Price : &#8377 <%= prod.price %></h5>
                      <a href="/addtocart/<%= prod.id %>" class="btn btn-primary">Add to Cart</a>
                    </div>
                  </div>
                
            </div>
            <% } %>

        </div>
    </div>


<%- include('../includes/end.ejs') %>



    