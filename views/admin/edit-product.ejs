<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/product-form.css">

    </head>

    <body>
        <%- include('../includes/navbar.ejs') %>



            <div class="container">
                <form action="/admin/editProduct/<%= prod.id%>" method="post" class="myform-control">
                    <div class="mb-3">
                      <label for="title" class="form-label">Title</label>
                      <input type="text" class="form-control" id="title" name="title" value="<%= prod.title%>">
                    </div>
                    <div class="mb-3">
                      <label for="price" class="form-label">Price</label>
                      <input type="number" class="form-control" id="price" name="price" value="<%= prod.price%>">
                    </div>

                    <div class="mb-3">
                      <label for="quantity" class="form-label">Quantity</label>
                      <input type="number" class="form-control" id="quantity" name="quantity" value="<%= prod.quantity%>">
                    </div>

                    <div class="mb-3">
                      <label for="imageurl" class="form-label">Image URL</label>
                      <input type="text" class="form-control" id="imageurl" name="imageurl" value="<%= prod.imageurl%>">
                    </div>

                    <div class="mb-3">
                      <label for="description" class="form-label">Description</label>
                      <input type="text" class="form-control" id="description" name="description" value="<%= prod.description%>">
                    </div>
                    
                    <button type="submit" class="btn my-btn">Done</button>
                  </form>
            </div>
                

            

<%- include('../includes/end.ejs') %>